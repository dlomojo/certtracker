{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CDK Deploy",
      "type": "shell",
      "command": "npm run deploy",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/infrastructure"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "CDK Diff",
      "type": "shell",
      "command": "npm run diff",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/infrastructure"
      }
    },
    {
      "label": "Start Frontend Dev",
      "type": "shell",
      "command": "npm start",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    }
  ]
}
